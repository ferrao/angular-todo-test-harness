{
  "name": "angular-todo-test-harness",
  "version": "0.0.1",
  "description": "Simple Angular Todo app for setting up a browserify karma jasmine test harness ",
  "main": "app.js",
  "dependencies": {
    "angular": "^1.5.8",
    "browserify": "^13.1.0"
  },
  "devDependencies": {
    "angular-mocks": "^1.5.8",
    "browserify-istanbul": "^2.0.0",
    "istanbul": "^0.4.5",
    "jasmine-core": "^2.5.2",
    "karma": "^1.3.0",
    "karma-angular": "0.0.6",
    "karma-browserify": "^5.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-coverage-html-index-reporter": "^1.0.2",
    "karma-jasmine": "^1.0.2",
    "karma-mocha-reporter": "^2.2.0",
    "karma-phantomjs-launcher": "^1.0.2"
  },
  "scripts": {
    "build": "browserify src/app.js --outfile build/bundle.js; cp src/index.html build; cp src/todo.css build",
    "prebuild": "rm -rf build; mkdir build",
    "clean": "rm -rf build",
    "test": "karma start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ferrao/angular-todo-test-harness.git"
  },
  "keywords": [
    "angular",
    "todo",
    "browserify",
    "karma",
    "jasmine",
    "test"
  ],
  "author": "Rui Ferrao",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ferrao/angular-todo-test-harness/issues"
  },
  "homepage": "https://github.com/ferrao/angular-todo-test-harness#readme"
}
